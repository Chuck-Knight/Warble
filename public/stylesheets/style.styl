body
  background url("/images/background.png") no-repeat
  background-color #F2E8D4
  font-family "Helvetica Neue", "Lucida Grande", "Arial"
  font-size 13px
  text-align center
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
h1, h2
  margin 0
  font-size 22px
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  font-size 60px

#warbles
  text-align left
  margin-left auto
  margin-right auto
  width 90%
  .warble
    border-style:solid;
    border-width:medium
    margin 20px
    .header
       background-color #C08F60
       .creator
          text-align left
          font-weight bold
       .created_at
          text-align right
          font-weight bold
    .body
       background-color #F2E8D4
.warble
  .created_at
  input[type =text]
    width 490px
    margin-left 16px
  input[type =button], input[type =submit]
    text-align left
    margin-left 440px
  textarea
    width 490px
    height 90px